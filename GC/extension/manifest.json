{
  "manifest_version": 3,
  "name": "CrediScan Labs",
  "description": "Scans news articles and checks for misinformation.",
  "version": "1.0",

  "action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}